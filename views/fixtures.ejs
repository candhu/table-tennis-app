<!doctype html>
<html lang="en">
<%- include('partials/header') %>

<body>
    <div class="container">
        <%- include('partials/nav', {active:'fixtures',tournamentID:''}) %>
        <h1>
            <%= title %>
        </h1>

        <div>
        <table id="fixturesTab" class="table table-sm table-bordered align-middle text-center"></table>
    </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="scoresEditModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title">Enter Scores ...</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="saveScoresForm" novalidate>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div id="scoresHeader" class="row align-middle text-center">
                                <div class="col">
                                    <h3 id="player1header">Player 1</h3>
                                </div>
                                <div class="col">
                                    <h4>vs</h4>
                                </div>
                                <div class="col">
                                    <h3 id="player2header">Player 2</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="js/firebaseData.js"></script>
    <script src="js/fixtures.js"></script>
    <%- include('partials/script-bs') %>
    <%- include('partials/script-socketio') %>
</body>

</html>